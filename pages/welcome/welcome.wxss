.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

page {
  background-color: #b3d4db;
  height: 100%;
}

.user-avatar {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #b3d4db;
  border-radius: 50%;
  margin-top: 160rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 120rpx;
}

.moto {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}

.moto-content {
  margin-top: 200rpx;
  border: 1px solid #405f80;
  border-radius: 5px;
  height: 80rpx;
  width: 200rpx;
  text-align: center;
}